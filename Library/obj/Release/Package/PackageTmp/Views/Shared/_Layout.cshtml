@using Library.Utils;

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Библиотека - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Ajax.ActionLink("Городская библиотека", "", "", new { area = "" }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Ajax.ActionLink("Книги", "Index","Books", new AjaxOptions() { UpdateTargetId="ContentBody", InsertionMode = InsertionMode.Replace, HttpMethod = "GET"})</li>
                    <li>@Ajax.ActionLink("Авторы", "Index", "Authors", new AjaxOptions() { UpdateTargetId = "ContentBody", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>
                    <li>@Ajax.ActionLink("Книжные серии", "Index", "BookSeries", new AjaxOptions() { UpdateTargetId = "ContentBody", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>
                    <li>@Ajax.ActionLink("Издательства", "Index", "PublishingHouse", new AjaxOptions() { UpdateTargetId = "ContentBody", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>
                    <li>@Ajax.ActionLink("Поиск", "Find", "Books", new AjaxOptions() { UpdateTargetId = "ContentBody", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" })</li>
                    <li><a href="https://github.com/lsv-sergio/Library.git" target="_blank">Ссылка на исходный код</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="col-md-12" id="ContentBody">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; - lsv.sergio@gmail.com @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryajax")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
