@model BookDetailsModel
@using Library.Models;

@{
    Layout = null;
}
<div class="form-horizontal">
    <div class="col-md-offset-3">
        <h3>Информация о книге </h3>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-3">
            <img src="~/Content/noimage.gif" />
        </div>
        <div class="col-md-9">
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    <h4> @Html.DisplayFor(model => model.Name, new { @class = "form-control" })</h4>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Ajax.ActionLink(Model.Author.Name, "Details", "Authors", new { Id = Model.Author.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.BookSeries, htmlAttributes: new { @class = "control-label" })
                </div>
                @if (Model.BookSeries != null)
                {
                    <div class="col-md-9">
                        @Ajax.ActionLink(Model.BookSeries.Name, "Details", "BookSeries", new { Id = Model.BookSeries.Id },new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default" })
                    </div>
                }
            </div>

            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PublishingHouse, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Ajax.ActionLink(Model.PublishingHouse.Name, "Details", "PublishingHouse", new { Id = Model.PublishingHouse.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PageCount, htmlAttributes: new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.DisplayFor(model => model.PageCount, new { @class = "form-control" })
                </div>
            </div>

            <div class="row form-group">
                @Ajax.ActionLink("Редактировать книгу", "Edit", new { id = Model.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-primary" })
                @Ajax.ActionLink("Список книг", "Index", null, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = " col-md-offset-1 btn btn-default" })
            </div>
        </div>
    </div>
</div>
