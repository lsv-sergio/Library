@model AuthorDetailsModel
@using Library.Models;

@{
    Layout = null;
}
<div class="form-horizontal">

    <div class="col-md-offset-3">
        <h3>Информация об авторе</h3>
    </div>
    <hr />
    <div class="row form-group">
        <div class="col-md-3">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
        </div>
        <div class="col-md-9">
            <h4> @Html.DisplayFor(model => model.Name, new { @class = "control-label" })</h4>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3">
            <label class="control-label">Книги автора</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            @foreach (var book in Model.Books)
            {
                @Ajax.ActionLink(book.Name.Trim(), "Details", "Books", new { id = @book.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default margin-left" })
            }
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3">
            <label class="control-label">Автор по сериям</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            @foreach (var bookSerie in Model.BookSeries)
            {
                @Ajax.ActionLink(bookSerie.Name.Trim(), "Details", "BookSeries", new { id = @bookSerie.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default margin-left" })
            }
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3">
            <label class="control-label">Автор по издательствам</label>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-12">
            @foreach (var publishongHouse in Model.PublishingHouse)
            {
                @Ajax.ActionLink(publishongHouse.Name.Trim(), "Details", "PublishingHouse", new { id = @publishongHouse.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default margin-left" })
            }
        </div>
    </div>

    <div class="row form-group ">
        @Ajax.ActionLink("Редактировать автора", "Edit", new { id = Model.Id }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-primary" })
        @Ajax.ActionLink("Список авторов", "Index", null, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "ContentBody" }, new { @class = "btn btn-default col-md-offset-1" })
    </div>

</div>
