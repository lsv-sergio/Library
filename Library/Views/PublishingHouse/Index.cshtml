@model IEnumerable<PublishingHouseModel>
@using Library.Models;

    <h4>Список издательств</h4>

    <p>
        @Html.ActionLink("Добавить издательство", "Create", "PublishingHouse")
    </p>

    @if (Model.Count() == 0)
{
        <div class="row">
            <div class="col-md-12 text-center">
                <h5>(Пусто)</h5>
            </div>
        </div>
}
else
{
    int columnPerRow = 2;
    int columnDiv = 12 / columnPerRow;
    string columnClass = "col-md-" + columnDiv.ToString();
    var items = Model.ToArray();
    for (int i = 0; i < items.Count(); i++)
    {
        <div class="row">
            <div class="col-md-12">
                @{
        for (int j = 0; j < columnPerRow; j++)
        {
            i += j;
            if (i >= items.Count())
            {
                break;
            }
            PublishingHouseModel item = items[i];
            <div class=@columnClass>
                <div class="row form-group row-top-margin">
                    <div class="col-md-12">
                        <div><div class="col-md-2">Название: </div><div class="col-md-10">@Html.ActionLink(item.Name, "Details", "PublishingHouse", new { Id = item.Id }, new { })</div></div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12">
                        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-default" })
                        @Html.ActionLink("Инфо", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </div>
                </div>
            </div>
        }
                }
            </div>
        </div>
    }

