@model IEnumerable<BooksListModel>
@using Library.Models;
<h4>Список книг</h4>
<p>
    <div class="form-group">
        <div class="btn">@Html.ActionLink("Добавить книгу", "Create", "Books")</div>
    </div>
</p>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-md-12 text-center">
            <h5>(Пусто)</h5>
        </div>
    </div>
}
else
{
    int columnPerRow = 2;
    int columnDiv = 12 / columnPerRow;
    string columnClass = "col-md-" + columnDiv.ToString();
    var items = Model.ToArray();
    for (int i = 0; i < items.Count(); i++)
    {
        <div class="row">
            <div class="col-md-12">
                @{
        for (int j = 0; j < columnPerRow; j++)
        {
            i += j;
            if (i >= items.Count())
            {
                break;
            }
            BooksListModel item = items[i];
            <div class=@columnClass>
                <div class="row row-top-margin">
                    <div class="col-md-6 text-center">
                        <img src="~/Content/noimage.gif" />
                    </div>
                    <div class="col-md-6">
                        <div class="form-horizontal"><div>Название: </div><div>@Html.ActionLink(item.Name, "Details", "Books", new { Id = item.Id }, new { })</div></div>
                        <div class="form-horizontal"><div>Автор: </div><div>@Html.ActionLink(item.Author.Name, "Details", "Authors", new { Id = item.Author.Id }, new { })</div></div>
                        <div class="form-horizontal"><div>Издательство: </div><div>@Html.ActionLink(item.PublishingHouse.Name, "Details", "PublishingHouse", new { Id = item.PublishingHouse.Id }, new { })</div></div>
                        @if (item.BookSeries != null)
                        {
                            <div class="form-horizontal"><div>Серия: </div><div>@Html.ActionLink(item.BookSeries.Name, "Details", "BookSeries", new { Id = item.BookSeries.Id }, new { })</div></div>
                        }
                        else
                        {
                            <div class="form-horizontal"><div>Серия: </div></div>
                        }
                        <div>К-во страниц: @Html.DisplayFor(modelItem => item.PageCount)</div>
                    </div>
                </div>
                <div class="row row-top-margin">
                    <div class="col-md-9 col-md-offset-3">
                        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-mini btn-default" })
                        @Html.ActionLink("Инфо", "Details", new { id = item.Id }, new { @class = "btn btn-mini btn-info margin-left" })
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-mini btn-danger margin-left" })
                    </div>
                </div>
            </div>
        }
                }
            </div>
        </div>
    }
}


<p>
    <div class="btn">@Html.ActionLink("Добавить книгу", "Create", "Books")</div>
</p>
